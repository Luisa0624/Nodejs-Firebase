<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
            <h1>Actualizar contacto:</h1>
        </div>
        <div class="card-body">
                <ul class="list-group">     
                        <li class="list-group-item d-flex justify-content-between align-items-center" >
                            {{cont.firstname}}
                            {{cont.lastname}} / 
                            {{cont.email}} / 
                            {{cont.phone}}
                        </li>
                </ul>
          
        </div>
        <div class="card-footer">
            <form action="/edit/{{id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="firstname" placeholder="Nombre" class="form-control"  value={{cont.firstname}} autofocus>
                </div>
                <div class="form-group">
                    <input  type="text" name="lastname" placeholder="Apellidos" class="form-control" value={{cont.lastname}}>
                </div>
                <div class="form-group">
                    <input type="email" name="email" placeholder="Email" class="form-control" value={{cont.email}}>
                </div>
                <div class="form-group">
                    <input type="number" name="phone" placeholder="Telefono" class="form-control" value={{cont.phone}}>
                </div>
                <button class="btn btn-primary btn-block">
                    Guardar
                </button>
            </form>
        </div>
    </div>
</div>
